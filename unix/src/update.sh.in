#!/bin/sh

if [ -z $TEMP ] ; then
  TARGET=/tmp/.xp
else
  TARGET=$TEMP/.xp
fi

echo "===> Downloading @TYPE@ runners to $TARGET"
xpi download bin/@TYPE@ $TARGET
if [ $? != 0 ] ; then
  exit
fi

echo "===> Extracting"
i=0
for e in `ls -1 $TARGET/*` ; do
  (head -1 $e | grep '^#!/bin/sh' >/dev/null) && chmod +x $e
  mv $e .
  i=$[$i+1]
done
echo "$i file(s) copied"

rmdir $TARGET
echo "===> Done, runners have been updated"
