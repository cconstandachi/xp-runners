#include <common.in>

EXEC("web", ".", "")

SERVER_PROFILE=dev
while [ $# != 0 ]; do
  case $1 in
    -p)
      SERVER_PROFILE=$2
      shift 2
      ;;
    -r)
      DOCUMENT_ROOT=$2
      root="-t|$2|"
      shift 2
      ;;
    *:*)
      server=${1%:*}
      port=${1#*:}
      shift 1
      break
      ;;
    *)
      server=$1
      shift 1
      break
      ;;
  esac
done
ADDR=${server-localhost}:${port-8080}

#include <instance.in>
export SERVER_PROFILE
export DOCUMENT_ROOT
${XP_EXE}${ifs}-S${ifs}${ADDR}${ifs}${root}${args}${ifs}$tool ${ARGS} "$@" &
PID=$!
echo "[xpws-$SERVER_PROFILE#$PID] running $ADDR. Press <Enter> to exit"
read enter
echo "[xpws-$SERVER_PROFILE#$PID] shutting down..."
kill -TERM $PID